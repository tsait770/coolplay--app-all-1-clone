# =====================================================
# InstaPlay V7 Environment Variables Template
# =====================================================
# Copy this file to .env and fill in your actual values

# =====================================================
# Supabase Configuration
# =====================================================
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# =====================================================
# PayPal Configuration
# =====================================================
# Get these from: https://developer.paypal.com/dashboard/applications

# PayPal Client ID (公开的，可以在前端使用)
EXPO_PUBLIC_PAYPAL_CLIENT_ID=your-paypal-client-id

# PayPal Client Secret (私密的，只在后端使用)
PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# PayPal Mode: sandbox (测试环境) 或 live (生产环境)
PAYPAL_MODE=sandbox

# PayPal 订阅计划 ID
# 在 PayPal Dashboard 中创建订阅产品和计划后获得
PAYPAL_PLAN_ID_BASIC_MONTHLY=your-basic-monthly-plan-id
PAYPAL_PLAN_ID_BASIC_YEARLY=your-basic-yearly-plan-id
PAYPAL_PLAN_ID_PREMIUM_MONTHLY=your-premium-monthly-plan-id
PAYPAL_PLAN_ID_PREMIUM_YEARLY=your-premium-yearly-plan-id

# =====================================================
# App Configuration
# =====================================================
# 您的应用 URL (用于 PayPal 回调)
EXPO_PUBLIC_APP_URL=http://localhost:8081

# Toolkit URL (Rork AI 工具包)
EXPO_PUBLIC_TOOLKIT_URL=https://toolkit.rork.com

# =====================================================
# Optional: Stripe Configuration (如果同时使用 Stripe)
# =====================================================
# EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
# STRIPE_SECRET_KEY=your-stripe-secret-key
# STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# =====================================================
# Development Settings
# =====================================================
# Debug mode
DEBUG=false

# Log level: debug | info | warn | error
LOG_LEVEL=info
